  <script>
    $(document).ready(function () {
      let dropdown = $('#locality-dropdown');

      dropdown.empty();
      dropdown.prop('selectedIndex', 0);
      const url = '/getuseraccounts';

      // Populate dropdown with list of provinces
      $.getJSON(url, function (data) {
        console.log(data.data[0].type);
        getBalance(data.data[0].type);
        for (var i = 0; i < data.data.length; i++) {
          dropdown.append($('<option></option>').attr('value', data.data[i].type).text(data.data[i].type));
        }
      });

    });



    $('#locality-dropdown').change(function () {
      console.log($(this).find(":selected").val());
      getBalance($(this).find(":selected").val());

    });
   

    function getBalance(type) {
      const url = '/getbalance?type=' + type;

      // Populate dropdown with list of provinces
      $.getJSON(url, function (data) {

        console.log(data.balance);

        $('#num').text(data.balance);


      });
    }
    function transaction(){
      var transaction = {};
      transaction.amount = document.getElementById("amount").value;
      transaction.toAccount = document.getElementById("toAccount").value;
      transaction.toRoutingNum = document.getElementById("toRoutingNum").value;
      transaction.transactionType=$('#transactionType').find(":selected").val();
      transaction.type=$('#locality-dropdown').find(":selected").val();
      transaction.frequency=$('#frequency').find(":selected").val();
      //this is nothing but the name of class/ id
      var balance = $('#num').text();
      //console.log(parseInt(balance,10));
      if(parseFloat(balance,10)<parseFloat(transaction.amount,10)){
        alert("Transaction can not be possible");
      }
      else{     
   console.log(transaction);
    $.ajax({url: "/transaction-money",
    type: "POST",
    data:transaction,
    success: function(result){
        if(result=="success"){
          alert("Transaction Successful.");
            window.location.href = 'http://localhost:5000/transaction';
        } else{
        alert("Issue with the transaction try sometime later.");
        }
    }
});
      }
    }

    $('#transactionType').change(function () {
      console.log($(this).find(":selected").val());
      if($(this).find(":selected").val()=="INTERNAL"){
        
        $("#toRoutingNum").hide();
        $("#routing").hide();
      }
      else{
        $("#toRoutingNum").show();
        $("#routing").show();
      }

    });
  </script>

